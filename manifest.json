{
  "name": "ClickCap - Smart Screen Recorder",
  "short_name": "ClickCap",
  "description": "Smart screen recording with automatic click zoom and GIF export. Perfect for tutorials and demos.",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "author": "Declan",
  "homepage_url": "https://github.com/DeclanJeon/ClickCap.git",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "src/popup/popup.html",
    "default_title": "ClickCap - Smart Screen Recorder"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "tabCapture",
    "offscreen",
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Start/Stop recording"
    },
    "pause-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Pause/Resume recording"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/offscreen/offscreen.html",
        "src/vendor/gif.js",
        "src/vendor/gif.worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self'"
  }
}

